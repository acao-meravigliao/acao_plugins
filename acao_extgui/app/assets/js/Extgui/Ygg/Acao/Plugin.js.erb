Ext.define('Extgui.Ygg.Acao.Plugin', {
  extend: 'Extgui.Plugin',

  css: '<%=stylesheet_path 'extgui/acao.css'%>',

  refs: [
  ],

  init: function() {
    var me = this;

    this.callParent(arguments);

    me.control({
      'viewport > tabpanel > panel[klass=Extgui.Ygg.Acao.Aircraft.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/acao/aircrafts/new'); }, },

      'viewport > tabpanel > panel[klass=Extgui.Ygg.Acao.Tracker.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/acao/trackers/new'); }, },

      'viewport > tabpanel > panel[klass=Extgui.Ygg.Acao.MeterBus.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/acao/meter_bus/new'); }, },

      'viewport > tabpanel > panel[klass=Extgui.Ygg.Acao.Meter.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/acao/meter/new'); }, },

      'viewport > tabpanel > panel[klass=Extgui.Ygg.Acao.Airfield.IndexPanel] > panel > toolbar button[name=new]':
       { click: function(el, record) { me.openUri('model/ygg/acao/airfield/new'); }, },
    });
  },
});
