<%= javascript_include_tag 'video' %>
<%= stylesheet_link_tag 'video' %>

<video id="player" class="video-js vjs-default-skin" style="width: 100%; height: 100%"></video>

<script>
  var player = videojs('player', {
    controls: true,
    autoplay: true,
//    width: 1280,
//    height: 720,
    plugins: {
//      videoJsResolutionSwitcher: {
//        dynamicLabel: true
//      }
    }
  }, function() {

    var player = this;

    player.src([
     {
      src: '/cam/cam1/live.m3u8',
      type:  'application/x-mpegURL'
     },
    ]);

    player.on('resolutionchange', function(){
      console.info('Source changed to %s', player.src());
    });
  });
</script>

